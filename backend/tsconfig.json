{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",

    "rootDirs": ["./src", "../shared"],

    "lib": ["es2022"],
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/shared/*": ["../shared/*"]
    },

    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*", "../shared/**/*", "prisma/**/*"]
}
